<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="wheel">

    <xacro:macro name="wheel"
                 params="prefix radius wheel_x_offset wheel_y_offset wheel_z_offset">
        <link name="${prefix}_wheel">
            <visual>
                <geometry>
                    <cylinder length="0.2" radius="${radius}"/>
                </geometry>
                <material name="black">
                    <color rgba="0 0 0 1"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <cylinder length="0.2" radius="${radius}"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="1.0"/>
                <inertia ixx="0.01333" ixy="0.0" ixz="0.0" iyy="0.01333" iyz="0.0" izz="0.02"/>
            </inertial>
        </link>

        <joint name="${prefix}_joint" type="continuous">
            <parent link="base_link"/>
            <child link="${prefix}_wheel"/>
            <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="-1.57 0 0"/>
            <axis xyz="0 0 1" />
        </joint>
    </xacro:macro>

    <xacro:macro name="wheel_transmission" params="prefix">
        <transmission name="${prefix}_transmission">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="${prefix}_joint">
                <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            </joint>
            <actuator name="${prefix}_motor">
                <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission>
    </xacro:macro>


    <xacro:macro name="color" params="prefix">
        <gazebo reference="${prefix}_wheel">
            <material>Gazebo/Black</material>
        </gazebo>
    </xacro:macro>

</robot>
